alias sudo='sudo '  # allow for sudo completion
alias t='tmux'
alias tls='tmux ls'
ta() {
  if [[ -z "$@" ]]; then
    tmux attach
  else
    tmux attach -t "$@"
  fi
}
alias v=vim
alias vb='v ~/.bashrc'
alias vrc='v ~/.vimrc'
alias vz='v ~/.zshrc'
# Allow watch and xargs alias completion with space.
# https://unix.stackexchange.com/a/25329/162041
alias watch='watch --color -d'
alias xargs='xargs '
