{
  "coc.preferences.formatOnSaveFiletypes": ["json", "python", "go", "lua"],

  "coc.preferences.colorSupport": false,

  "diagnostic.errorSign": "âœ˜",
  "diagnostic.warningSign": "?",
  "diagnostic.infoSign": "i",
  "diagnostic.enableMessage": "always",

  "lua.enable": true,

  "go.goplsPath": "/usr/local/bin/gopls",
  "go.goplsArgs": [
    "-remote=auto",
    "-logfile=auto",
    "-debug=:6666",
    "-remote.debug=:6667",
    "-rpc.trace"
  ],
  "go.goplsOptions": {
    "staticcheck": true,
    "analyses": {
      "nilness": true,
      "unusedwrite": true
    }
  },

  "diagnostic-languageserver.filetypes": {
    "vim": "vint",
    "sh": "shellcheck",
    "dockerfile": "hadolint"
  },

  "python.pythonPath": "python3",
  "python.formatting.provider": "black",

  "languageserver": {
    "golangci-lint-languageserver": {
      "command": "golangci-lint-langserver",
      "filetypes": ["go"],
      "initializationOptions": {
        "command": [
          "golangci-lint",
          "run",
          "--out-format",
          "json",
          "--enable",
          "asciicheck",
          "bidichk",
          "bodyclose",
          "contextcheck",
          "cyclop",
          "dupl",
          "durationcheck",
          "errorlint",
          "exhaustive",
          "exhaustivestruct",
          "exportloopref",
          "gocognit",
          "gosec",
          "makezero",
          "misspell",
          "nilerr",
          "nilnil",
          "prealloc",
          "promlinter",
          "thelper"
        ]
      }
    }
  }
}
