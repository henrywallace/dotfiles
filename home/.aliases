# rebase master or rebase back $1 commits
function rb () {
  if [ -z "$1" ]; then
    git rebase -i master
  else
    echo "git rebase -i HEAD~$1"
    git rebase -i "HEAD~$1"
  fi
}
# git commit ammend, with quick option for no-edit
function gca() {
  if [ "$1" == "-" ] || [ "$1" == "--" ]; then
    git commit --amend --no-edit
  else
    git commit --amend
  fi
}
