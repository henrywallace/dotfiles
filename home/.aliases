# simple and quick HTTP server
function serve() {
  if [ -z "$1" ]; then
    echo http://localhost:8000
  else
    echo "http://localhost:$1"
  fi
  echo "python -m SimpleHTTPServer $1"
  python -m SimpleHTTPServer $1
}

