# editors
alias e='emacs'
alias emacs='emacs -nw'
alias v=vim

# golang
alias de='dep ensure -v'
alias dup='go get -u github.com/golang/dep/cmd/dep'
alias goi='go install -v ./...'
alias reinstall='dep ensure -v && go install -v ./...'
alias gome='cd $GOPATH/src/github.com/henrywallace'
alias gdoc='echo http://localhost:6060; godoc -play -notes="TODO|HELP|QUESTION" -http :6060'

# rustlang
alias cup='cargo install-update -a'

# git
alias cleanup='git branch --merge master | grep -v master | xargs git branch -d'
alias conflicts="rg '<<<<<<<'"
alias dif='git diff master..HEAD --stat'
alias g-='git checkout -'
alias g='git'
alias ga='git add -u'
alias gb="git for-each-ref --color=always --sort=-committerdate refs/heads/ --format='%(HEAD)|%(color:green)%(committerdate:relative)%(color:reset)|%(color:blue)%(refname:short)%(color:reset)|%(contents:subject)|%(color:red)%(objectname:short)%(color:reset)' | column -t -s '|'"
alias gc='git checkout'
# _completion_loader git
