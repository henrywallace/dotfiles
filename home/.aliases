# docker
alias enhance='function ne() { docker run --rm -v "$(pwd)/`dirname ${@:$#}`":/ne/input -it alexjc/neural-enhance ${@:1:$#-1} "input/`basename ${@:$#}`"; }; ne'

# config
alias ba='emacs ~/.bash_aliases'
alias brc='emacs ~/.bashrc'
alias el='emacs ~/.emacs.el'
alias rld='source ~/.bashrc'
alias vrc='vim ~/.vimrc'

# misc
alias div='printf "%$(tput cols)s\n" | tr " " ='
alias sudo='sudo '
alias bup='brew upgrade && brew cleanup'
alias c='clear'
alias celar='clear'
alias dotf='cd ~/dotfiles'
alias rg='rg -n --color=always --colors path:fg:green --colors path:style:bold --colors line:fg:blue --colors line:style:bold'
alias rgo="rg -g '*.go'"
alias ta='tmux attach'
alias watch='watch --color ' # https://unix.stackexchange.com/a/25329/162041
alias yup='yolk --upgrade'
alias shellcheck='shellcheck --color=always'
alias d='cd ~/Desktop'

# gke
alias gc='gcloud compute'

# k8s
alias k='kubectl'
alias kt='kubetail'
alias mk='minikube'
alias kn='kubectl get no'
alias kp='kubectl get po'
alias mkl='minikube service list'
alias wp='watch kubectl get pods'
alias wpa='watch kubectl get pods --all-namespaces'

# generic
alias c='clear'
alias cp='cp -i'
alias j='jobs -l'
alias l='ls'
alias le='less'
alias less='less -gSR'
alias ll='ls -la'
alias ls="exa --group-directories-first -I '*~'"
alias mv='mv -i'
alias rm='rm -i'
alias ..='cd ..'
alias ...='cd ../..'
