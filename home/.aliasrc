compose() {
  if [ -z "$1" ]; then
    echo must provide filename
    exit 1
  fi

  if [ -e "$1" ]; then
    mdpreview "$1"
    return
  fi
  mkdir -p "$(dirname "$1")"
  touch "$1"
  mdpreview "$1"
}

#
# git
#
gprune() {
  # include latest tag
  git branch --merge master \
    | grep -v master \
    | xargs git branch -d 2> /dev/null \
  || echo "No branches to prune."
}
con() {
  git diff --name-only --diff-filter=U \
    | xargs realpath --relative-to=. \
    | xargs rg --no-heading -C6 "<<<<<<<"
}
