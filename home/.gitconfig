[user]
	name = Henry Wallace
	email = "henry@henrywallace.io"
	signingkey = "henry@henrywallace.io"

[push]
	default = simple

[core]
	# Don't set editor, but instead just use $EDITOR
	# https://git-scm.com/book/en/v2/Customizing-Git-Git-Configuration#_core_editor
	# editor =
	# git-config does indeed expand ~
	# https://stackoverflow.com/a/11262153
	excludesfile = ~/.gitignore_global
	pager = git-pager

[commit]
	gpgsign = true

[alias]
	co = checkout
	cp = cherry-pick
	c = commit
	cm = commit --allow-empty -m

[log]
	graphColors = red
	abbrevCommit = true

[url "git@github.com:"]
	insteadOf = https://github.com/

[absorb]
	maxStack = 100

; [pull]
; 	ff = only

; [rerere]
; 	enabled = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[pull]
	ff = only

; [submodule]
; 	recurse = true
