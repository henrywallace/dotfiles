[user]
    name = Henry Wallace
    email = henry@henrywallace.io

[push]
    default = simple

[core]
    editor = emacsclient -t -nw
    # https://stackoverflow.com/a/11262153
    excludesfile = ~/.gitignore_global
    pager = diff-so-fancy | less --tabs=4 -RFX

[alias]
    co = checkout

[color "diff"]
    frag = blue dim
    meta = black dim
    commit = blue

[log]
    graphColors = black
    abbrevCommit = true