#!/bin/bash

RED=$(tput setaf 1)
GREEN=$(tput setaf 2)
YELLOW=$(tput setaf 3)
BLUE=$(tput setaf 4)
BOLD=$(tput bold)
NC=$(tput sgr0)

branch=$(git branch | grep '* ' | tr '*' ' ' | xargs)
stash=$(git stash list | wc -l | xargs)

echo ${GREEN}branch: $BOLD$branch$NC
echo ${BLUE}stash: $BOLD$stash$NC
echo $YELLOW$BOLD
git status | rg -v 'On branch'
echo $NC
